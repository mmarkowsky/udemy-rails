<h3 class="text-center">Edit the article</h3>
    <div class="col-md-12">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <% if @article.errors.any? %>
            <div class="panel panel-danger col-md-offset-1">
                <div class="panel-heading">
                    <h2 class="panel-title">
                        <%= pluralize(@article.errors.count, "error") %>
                        prohibited this article from being saved:
                    </h2>
                    <div class="panel-body">
                        <ul>
                            <% @article.errors.full_messages.each do |msg|%>              
                            <li>
                                <%=msg %>
                            </li>
                            <% end %>
                        </ul>      
                    </div>
                </div>
            </div>
            <% end %>
            <div class="form-group">
                <div class="control-label col-md-1">
                    <%= f.label :title %>
                </div>           
                <div class="col-md-11">
                    <%= f.text_field :title, class:"form-control",placeholder: "Title of Article", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-1">
                    <%= f.label :body %>
                </div>           
                <div class="col-md-11">
                    <%= f.text_area :body, rows:10, class:"form-control",placeholder: "Body of Article"%>
                </div>
            </div>

            <div class="form-group-delete-update">
                <div class="col-md-offset-1 col-md-11">
                    <%= link_to "Delete Article",article_path(@article), method: :delete,
                    data: {confirm: "Are you sure you must to delete this article?"},                    
                    class: 'btn btn-primary btn-lg pull-left', id:"delete-article-btn"%>
                    
                    <%= f.submit class: 'btn btn-primary btn-lg pull-right'%>
                </div>           
            </div>
        <%end%>
    </div>
</div>
            